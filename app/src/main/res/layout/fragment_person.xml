<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/user_head"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=""
        android:gravity="center"
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/more"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="更多详情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:background="#bfbfbf"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        style="@style/PersonItem"
        android:id="@+id/item_1">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_image_1"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/item_text_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/PersonItem"
        android:id="@+id/item_2">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/item_image_2"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            style="@style/TextItem"
            android:id="@+id/item_text_2" />
    </LinearLayout>

    <LinearLayout
        style="@style/PersonItem"
        android:id="@+id/item_3">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_image_3"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/item_text_3"
            style="@style/TextItem" />
    </LinearLayout>

    <LinearLayout
        style="@style/PersonItem"
        android:id="@+id/item_4">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_image_4"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/item_text_4"
            style="@style/TextItem"/>
    </LinearLayout>

    <LinearLayout
        style="@style/PersonItem"
        android:id="@+id/item_5">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_image_5"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/item_text_5"
            style="@style/TextItem" />
    </LinearLayout>



</LinearLayout>